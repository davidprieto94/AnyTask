<% include ../partials/_header %>

<div class="container">
<div class="row">
        <!--FORM-->
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <form action="/add" method="post">
                <h3 align="center">Tarea</h3>
                <div class="form-group">
                  <input class="form-control" type="text" name="name" placeholder="Nombre">
                </div>
                <div class="form-group">
                  <input class="form-control" type="number" name="phone" placeholder="Celular">
                </div>
                <div class="form-group">
                  <input class="form-control" type="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                  <input class="form-control" type="text" name="title" placeholder="Tarea">
                </div>
                <div class="form-group">
                  <textarea class="form-control" name="description" cols="80"
                    placeholder="DescripciÃ³n Tarea"
                    ></textarea>
                </div>
                <div class="form-group">
                  <h6>Plazo Tarea </h6>
                  <input class="form-control" type="date" name="date" placeholder="Plazo Tarea">
                </div>
                <div class="form-group">
                    <h6>Prioridad</h6>
                        <select class="form-control" type="number" name="prioridad">
                                <option value="3">Alta</option>
                                <option value="2">Media</option>
                                <option value="1">Baja</option>
                              </select>
                </div>
                <button class="btn btn-primary" type="submit">
                  Agregar
                </button>
              </form>
            </div>
          </div>
        </div>
</div>
</div>

<% include ../partials/_footer %>