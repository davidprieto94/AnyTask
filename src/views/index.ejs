<% include partials/_header %>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Nombre">
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="phone" placeholder="Celular">
            </div>
            <div class="form-group">
              <input class="form-control" type="email" name="email" placeholder="Email">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="Tarea">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" cols="80"
                placeholder="Descripción Tarea"
                ></textarea>
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="date" placeholder="plazo">
            </div>
            <button class="btn btn-primary" type="submit">
              Agregar
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N°</th>
            <th>Nombre</th>
            <th>Celular</th>
            <th>Email</th>
            <th>Tarea</th>
            <th>Descripción Tarea</th>
            <th>Plazo Tarea</th>
            <th>Operaciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <% for(var i=0; i < users.length; i++) { %>
              <tr>
                <td><%= i + 1%></td>
                <td><strong><%= users[i].name %></strong></td>
                <td><strong><%= users[i].phone %></strong></td>
                <td><strong><%= users[i].email %></strong></td>
                <td><strong><%= tasks[i].title %></strong></td>
                <td><%= tasks[i].description %></td>
                <td><%= tasks[i].date%></td>
                <td>
                  <a
                    class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                    href="/turn/<%= tasks[i]._id %>">Completada</a>
                  <a href="/delete/<%= tasks[i]._id %>"
                    class="btn btn-danger">
                    Eliminar</a>
                  <a href="/edit/<%= tasks[i]._id %>" 
                    class="btn btn-info">
                    Editar</a>
                </td>
              </tr>
            <% } %>  
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>